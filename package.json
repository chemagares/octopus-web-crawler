{
  "name": "node-crawler",
  "version": "1.0.0",
  "description": "Simple NodeJS web crawler.",
  "main": "./dist/index.js",
  "author": "chemagares",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chemagares/node-crawler"
  },
  "scripts": {
    "compile": "tsc",
    "compile:watch": "tsc -w",
    "test": "jest"
  },
  "dependencies": {
    "args": "^5.0.1",
    "node-fetch": "^2.6.1",
    "ts-jest": "^27.0.5"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "jest": "^27.1.1",
    "typescript": "^4.4.2"
  },
  "jest": {
    "testEnvironment": "node",
    "modulePaths": [
      "src/"
    ],
    "testPathIgnorePatterns": [
      "viewer/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "preset": "ts-jest",
    "transform": {
      "node_modules/variables/.+\\.(j|t)sx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!variables/.*)"
    ]
  }
}
